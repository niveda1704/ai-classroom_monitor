# AI Service Configuration
# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true

# MongoDB
MONGODB_URI=mongodb://localhost:27017/classroom_analytics

# Model Settings
YOLO_MODEL=yolov8n.pt
YOLO_CONF_THRESHOLD=0.5
FACE_DET_THRESHOLD=0.5
FACE_REC_THRESHOLD=0.4

# Processing
TARGET_FPS=8
MAX_FRAME_WIDTH=1280
MAX_FRAME_HEIGHT=720

# Enrollment
MIN_ENROLLMENT_IMAGES=10
MAX_ENROLLMENT_IMAGES=20
EMBEDDING_DIMENSION=512

# Snippet Recording
SNIPPET_DURATION_SECONDS=10
SNIPPET_OUTPUT_DIR=./snippets
SNIPPET_FORMAT=mp4

# Backend Communication
BACKEND_URL=http://localhost:3001
BACKEND_WS_URL=ws://localhost:3001/ws
